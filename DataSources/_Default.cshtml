@inherits Custom.Hybrid.Razor14
@using ToSic.Sxc.Code;
@using ToSic.Eav.DataSources;

<h1>App DataSources</h1>

@{
  var expected = 6;
  var ds = CreateSourceWip("MagicDataSource", configuration: new DataSourceConfiguration("AmountOfItems=" + expected));
}

<hr>
<h2>Data in source</h2>

List: @ds.List (@ds.List.Count()) - we expect @expected items
<br>
<ol>
  @foreach (var item in AsList(ds.List))
  {
    <li>@item.EntityTitle (@item.EntityId)</li>
  }
</ol>
