@inherits Custom.Hybrid.Razor14<dynamic, ToSic.Sxc.Services.ServiceKit14>

<h1>Toolbar Service - HTML</h1>
<p>
  Show various cases where a toolbar service is just to-HTMLed
</p>
@{
  var tlb = Kit.Toolbar.Default().Metadata(CmsContext.Page).Settings(classes: "test-from-test");
  var tlbHtml = tlb.With(mode: "html");
  var tlbJson = tlb.With(mode: "json");
}

<ol>
  <li>
    @tlb <strong @tlb>on this tag</strong> </li>
  <li>
    mode tag: @tlbHtml
  </li>
  <li>
    mode json: @tlbJson
  </li>
</ol>
