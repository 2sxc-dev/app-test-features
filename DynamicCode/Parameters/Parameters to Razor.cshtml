@inherits Custom.Hybrid.Razor14
@using System.Linq;

<h1>Dynamic Code - Parameters to Razor</h1>
<p>
  Passing parameters to sub-razor.
</p>
@{
  var itemWithImages = AsTyped(App.Data["AdamFields"]);
  
  var folder = itemWithImages.Folder("Image");
  var parameters = new {
    Found = true,
    Message = "Hello",
    Item = AsTyped(Data.MyContent),
    Items = AsTypedList(Data.MyContent),
    Dyn = Content,
    Entity = Data.MyContent.First(),
    AlbumItem = itemWithImages,
    Folder = folder,
    Files = folder.Files,
    Album = folder,
    AlbumFolders = itemWithImages.Folder("Album").Folders,
    AlbumFiles = itemWithImages.Folder("Album").Files,
    AlbumSub1Files = itemWithImages.Folder("Album").Folders.First().Files,
  };
}
@Html.Partial("./_parts/Parameters to Razor.Part DynamicModel.cshtml", parameters)


@Html.Partial("./_parts/Parameters to Razor.Part TypedModel.cshtml", parameters)
