@inherits Custom.Hybrid.Razor14

<h1>Toolbar Service - HTML</h1>
<p>
  Show various cases where a toolbar service is just to-HTMLed
</p>
@{
  var tlb = Kit.Toolbar.Default().Metadata(CmsContext.Page).Settings(classes: "test-from-test");
  var tlbHtml = tlb.AsTag();
  var tlbJson = tlb.AsJson();
}

<ol>
  <li>
    <strong @tlb>on this tag (mouse over)</strong>
    @tlb 
  </li>
  <li>
    mode tag: @tlbHtml
  </li>
  <li>
    mode json: @tlbJson
  </li>
</ol>
