@inherits Custom.Hybrid.Razor14

<h1>Toolbar Service - View, Template, Query, Type</h1>
<p>
  Show various cases where a toolbar service is just to-HTMLed
</p>
@{

  var itemToCopy = AsDynamic(App.Data["Dummy"].First());
  var itemQuotes = AsDynamic(App.Data["Quotes"].First());

  var tlbLayoutOnly = Kit.Toolbar.Empty().Layout();
  var tlbHideLayout = Kit.Toolbar.Default(itemToCopy).Layout("-");


  var tlbViewEtc = Kit.Toolbar.Empty().View().Template().Query()
    .Fields().Fields("Quotes").Fields(itemQuotes);


  var tlbTodo = Kit.Toolbar.Default(itemToCopy).Delete(operation: "add");
}

<ol>
  <li>
    Layout Only @tlbLayoutOnly.AsTag()
    <br>
    @tlbLayoutOnly.AsJson()
  </li>
  <li>
    Default Hide Layout @tlbHideLayout.AsTag()
    <br>
    @tlbHideLayout.AsJson()
  </li>
  <hr>

  <li>
    View, Template, Query edit @tlbViewEtc.AsTag()
    <br>
    @tlbViewEtc.AsJson()
  </li>
  <li>
    Default with flag "add" - delete should show @tlbTodo.AsTag()
    <br>
    @tlbTodo.AsJson()
  </li>
</ol>
